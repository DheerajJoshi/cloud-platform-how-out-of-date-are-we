<h1>GitHub Repositories (<%= list.size %>)</h1>

<% if list.any? %>
  <div class="row">
    <% list.each do |repo| %>

      <div class="card text-white bg-danger mb-3 mr-3" style="max-width: 18rem;">
        <div class="card-header">
          <h5 class="card-title"><%= repo["name"] %></h5>
        </div>
        <div class="card-body">
          <ul>
            <% repo["report"].each do |key, value| %>
              <% if !value %>
                <li><%= key %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>

    <% end %>
  </div>
<% else %>
  <h1>
    Awaiting data
  </h1>
<% end %>
